/* This file is the descriptor for the python runnable datasets-wiki-generator */
{
    "meta": {
        "label": "Data Dictionary Wiki",
        "description": "Create data dictionary wiki article for project datasets",
        "icon": "far fa-newspaper"
    },

    "impersonate": false,
    "permissions": [],
    "resultType": "URL",
    "resultLabel": "Link to generated wiki",

    "macroRoles": [
        {
            "type": "PROJECT_MACROS"
        }
    ],
    "paramsPythonSetup": "get_options_runnable.py",
    "params": [
        {
            "name": "select_all",
            "label": "Select all",
            "type": "BOOLEAN",
            "description": "Select all datasets or matching datasets if filtering with tags",
            "defaultValue": true,
            "mandatory": true
        },
        {
            "name": "use_filter",
            "label": "Filter with tags",
            "type": "BOOLEAN",
            "defaultValue": false,
            "mandatory": true
        },
        {
            "name": "tags",
            "label": "Tag(s)",
            "type": "MULTISELECT",
            "visibilityCondition": "model.use_filter",
            "getChoicesFromPython": true,
            "disableAutoReload": true
        },
        {
            "name": "exclude",
            "label": "Exclude selected tag(s)",
            "type": "BOOLEAN",
            "defaultValue": false,
            "mandatory": true,
            "visibilityCondition": "model.use_filter"
        },
        {
            "name": "datasets",
            "label": "Dataset(s)",
            "type": "MULTISELECT",
            "visibilityCondition": "!model.select_all",
            "getChoicesFromPython": true
        }
    ]
}
