/* This file is the descriptor for the python runnable datasets-wiki-generator */
{
    "meta": {
        "label": "Data Dictionary",
        "description": "Create data dictionary for project datasets",
        "icon": "far fa-newspaper"
    },

    "impersonate": false,
    "permissions": [],
    "resultType": "NONE",

    "macroRoles": [
        {
            "type": "PROJECT_MACROS"
        }
    ],


    /* params:
    DSS will generate a formular from this list of requested parameters.
    Your component code can then access the value provided by users using the "name" field of each parameter.

    Available parameter types include:
    STRING, INT, DOUBLE, BOOLEAN, DATE, SELECT, TEXTAREA, DATASET, DATASET_COLUMN, MANAGED_FOLDER, PRESET and others.

    For the full list and for more details, see the documentation: https://doc.dataiku.com/dss/latest/plugins/reference/params.html
    */
    "params": [
        {
            "name": "select_all",
            "label": "Select all",
            "type": "BOOLEAN",
            "description": "Select all datasets or matching datasets if filtering with tags",
            "defaultValue": true,
            "mandatory": true
        },
        {
            "name": "use_filter",
            "label": "Filter with tags",
            "type": "BOOLEAN",
            "defaultValue": false,
            "mandatory": true
        },
        {
            "name": "exclude",
            "label": "Exclude selected tag(s)",
            "type": "BOOLEAN",
            "defaultValue": false,
            "mandatory": true,
            "visibilityCondition": "model.use_filter"
        },
        {
            "name": "datasets",
            "label": "Dataset(s)",
            "type": "MULTISELECT",
            "selectChoices": [
                {
                    "value": "val_x",
                    "label": "display name for val_x"
                },
                {
                    "value": "val_y",
                    "label": "display name for val_y"
                }
            ]
        }
    ]
}
